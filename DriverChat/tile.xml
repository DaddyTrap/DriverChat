<?xml version="1.0" encoding="utf-8" ?>
<tile>
  <visual branding="nameAndLogo" displayName="Driver Chat">

    <binding template="TileSmall">
      <image src="Assets/tileImage.png" placement="background"/>
      <text hint-style="title" hint-align="center" hint-wrap="true" ></text>
      <text hint-style="subtitleSubtle" hint-align="center" hint-wrap="true"></text>
    </binding>

    <binding template="TileMedium">
      <image src="Assets/tileImage.png" placement="background"/>
      <text hint-style="title" hint-align="center" hint-wrap="true"></text>
      <text hint-style="subtitleSubtle" hint-align="center" hint-wrap="true"></text>
    </binding>

    <binding template="TileWide">
      <image src="Assets/tileImage.png" placement="background"/>
      <text hint-style="title" hint-align="center" hint-wrap="true"></text>
      <text hint-style="title" hint-align="center" hint-wrap="true"></text>
    </binding>

    <binding template="TileLarge" hint-textStacking="center">
      <image src="Assets/tileImage.png" placement="background"/>
      <text hint-style="title" hint-align="center" hint-wrap="true"></text>
      <text hint-style="subtitleSubtle" hint-align="center" hint-wrap="true"></text>
    </binding>

  </visual>
</tile>